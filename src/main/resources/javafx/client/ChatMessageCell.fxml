<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.text.Text?>
<Pane
    xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    stylesheets="/assets/styles/Chat.css"
    fx:id="root"
    minWidth="200" minHeight="60.0">
    <padding>
        <Insets left="10.0" right="10.0"/>
    </padding>
    <VBox
          styleClass="message-container" maxHeight="-Infinity" maxWidth="-Infinity">
        <HBox spacing="10.0">
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
            <Label fx:id="dateField" opacity="0.5" textFill="WHITE"/>
            <Label fx:id="userNameField" textFill="WHITE" styleClass="message-container__username"/>
        </HBox>
        <HBox>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </padding>
            <Label fx:id="messageField" textFill="WHITE"
                   wrapText="true" maxWidth="400"/>
        </HBox>
    </VBox>
</Pane>
